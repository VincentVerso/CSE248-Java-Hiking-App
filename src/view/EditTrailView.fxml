                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label id="addressLbl" fx:id="addressLbl" layoutX="275.0" layoutY="138.0" text="Address:">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label id="lengthLbl" fx:id="lengthLbl" layoutX="275.0" layoutY="148.0" text="Length:">
                     <font>
                        <Font size="14.0" />
