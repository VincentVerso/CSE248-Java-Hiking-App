                              <Insets right="5.0" />
                           </HBox.margin>
                        </ComboBox>
                        <ComboBox id="typeCombo" fx:id="typeCombo" layoutX="235.0" layoutY="32.0" prefWidth="150.0">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </ComboBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="33.0" prefWidth="600.0">
                     <children>
                        <Button id="updateBtn" fx:id="updateBtn" mnemonicParsing="false" onAction="#onUpdateTrailEvent" text="Update" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
