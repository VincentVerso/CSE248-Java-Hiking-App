<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <TextField id="usernameField" fx:id="usernameField" alignment="TOP_LEFT" maxWidth="200.0" prefWidth="200.0" promptText="Username">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField id="passwordField" fx:id="passwordField" alignment="TOP_LEFT" layoutX="550.0" layoutY="358.0" maxWidth="200.0" prefWidth="200.0" promptText="Password">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Don't have an account? Click Signup!" />
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="1280.0">
               <children>
                  <Button id="loginBtn" fx:id="loginBtn" mnemonicParsing="false" onAction="#loginEvent" text="Login">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button id="signupBtn" fx:id="signupBtn" mnemonicParsing="false" onAction="#signupEvent" text="Signup">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label id="notifyLbl" fx:id="notifyLbl" />
         </children>
      </VBox>
   </children>
</AnchorPane>
